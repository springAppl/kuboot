<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
    <sql id="table">user</sql>
    <select id="findByID" parameterType="long" resultType="User">
        select * from <include refid="table"/> where id = #{id}
    </select>

    <select id="paging" parameterType="User" resultType="User">
        select * from <include refid="table"/>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
               and name = #{name}
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>

    <select id="count" resultType="int">
        select count(id) from <include refid="table"/>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
        </where>
    </select>

    <select id="findByUser" parameterType="User" resultType="User">
        select * from <include refid="table"/>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="mobile != null">
                and mobile = #{mobile}
            </if>
        </where>
    </select>

    <insert id="create" parameterType="User" keyProperty="id" keyColumn="id" useGeneratedKeys="true">
        insert into <include refid="table"/>(name, mobile, password) values(#{name}, #{mobile}, #{password})
    </insert>


</mapper>